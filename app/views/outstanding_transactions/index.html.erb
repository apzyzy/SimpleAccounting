<footer class="panel-footer bg-white">
	<div class="row text-center no-gutter">
		<div class="col-xs-3 b-r b-light">
			<p class="h3 <%= is_amount_in_the_red?(Transaction.money_in_hand) %> font-bold m-t">
				<%= number_to_currency(Transaction.money_in_hand, :unit => "₦") %>
			</p>
			<p class="text-muted">
				Money in hand
			</p>
		</div>
		<div class="col-xs-3 b-r b-light">
			<p class="h3 text-danger font-bold m-t">
				<%= number_to_currency(OutstandingTransaction.total_debt, :unit => "₦") %>
			</p>
			<p class="text-muted">
				Total Debt
			</p>
		</div>
		<div class="col-xs-3 b-r b-light">
			<p class="h3 text-success font-bold m-t">
				<%= number_to_currency(OutstandingTransaction.total_credit, :unit => "₦") %>
			</p>
			<p class="text-muted">
				Total Credit
			</p>
		</div>
		<div class="col-xs-3">
			<p class="h3 <%= is_amount_in_the_red?(Transaction.money_in_hand - OutstandingTransaction.net_outstanding) %> font-bold m-t">
				<%= number_to_currency((Transaction.money_in_hand - OutstandingTransaction.net_outstanding), :unit => "₦") %>
			</p>
			<p class="text-muted">
				Net Balance
			</p>
		</div>
	</div>
</footer>
<br/>

<div class="col-sm-6">
	<section class="panel panel-default">
		<header class="panel-heading">
			Debts (Money We Owe)
			<span class="pull-right"> <a href="<%= new_outstanding_transaction_path %>" data-toggle="modal" data-target="#formModal"  class="label label-success"> <i class="fa fa-plus"></i> Add New </a> </span>
		</header>
		<div class="table-responsive">
			<table class="table table-striped b-t b-light">
				<thead>
					<tr>
						<th width="120">Amount</th>
						<th>Description</th>
						<th>Owed Party</th>
						<th width="100"></th>
					</tr>
				</thead>
				<tbody>
					<% @debts.each do |debt| %>
					<tr>
						<td><%= number_to_currency(debt.amount, :unit => "₦") %></td>
						<td><%= debt.description %></td>
						<td><%= debt.other_party %></td>
						<td> <%= form_tag settle_outstanding_outstanding_transaction_path(debt), method: :put do %>
						<button class ="btn btn-link" type="submit" >
							<i class="glyphicon glyphicon-ok text-success"></i> Settle
						</button> <% end %> <a data-toggle="modal" href="<%= edit_outstanding_transaction_path(debt) %>" data-target="#formModal" style="margin: 10px"><i class="glyphicon glyphicon-pencil text-info"></i></a><a data-confirm="Are you sure you want to delete this Transaction" data-method="delete" href="outstanding_transactions/<%= debt.id %>"><i class="glyphicon glyphicon-trash text-danger"></i></a></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</section>

	<section class="panel panel-default">
		<header class="panel-heading">
			Settled Debts/Credits
		</header>
		<div class="table-responsive">
			<table class="table table-striped b-t b-light">
				<thead>
					<tr>
						<th width="120">Amount</th>
						<th>Description</th>
						<th>Other Party</th>
						<th>Kind</th>
					</tr>
				</thead>
				<tbody>
					<% @settled_outstanding_transactions.each do |settled| %>
					<tr>
						<td><%= number_to_currency(settled.amount, :unit => "₦") %></td>
						<td><%= settled.description %></td>
						<td><%= settled.other_party %></td>
						<td><%= settled.kind.capitalize %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</section>
</div>

<div class="col-sm-6">
	<section class="panel panel-default">
		<header class="panel-heading">
			Credits (Money We're Being Owed)
			<span class="pull-right"> <a href="<%= new_outstanding_transaction_path %>" data-toggle="modal" data-target="#formModal"  class="label label-success"> <i class="fa fa-plus"></i> Add New </a> </span>
		</header>
		<div class="table-responsive">
			<table class="table table-striped b-t b-light">
				<thead>
					<tr>
						<th width="120">Amount</th>
						<th>Description</th>
						<th>Owing Party</th>
						<th width="100"></th>
					</tr>
				</thead>
				<tbody>
					<% @credits.each do |credit| %>
					<tr>
						<td><%= number_to_currency(credit.amount, :unit => "₦") %></td>
						<td><%= credit.description.truncate(26) %></td>
						<td><%= credit.other_party %></td>

						<td> <%= form_tag settle_outstanding_outstanding_transaction_path(credit), method: :put do %>
						<button class ="btn btn-link" type="submit" >
							<i class="glyphicon glyphicon-ok text-success"></i> Settle
						</button> <% end %> 
						<a data-toggle="modal" href="<%= edit_outstanding_transaction_path(credit) %>" data-target="#formModal" style="margin: 10px"><i class="glyphicon glyphicon-pencil text-info"></i></a><a data-confirm="Are you sure you want to delete this Transaction" data-method="delete" href="outstanding_transactions/<%= credit.id %>"><i class="glyphicon glyphicon-trash text-danger"></i></a>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</section>
</div>

<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content"></div>
	</div>
</div>

<script>
	$(function() {
		$('#formModal').on('hidden.bs.modal', function() {
			$(this).removeData('bs.modal');
		});
	}); 
</script>

