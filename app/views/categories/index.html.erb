<section class="panel panel-default">
	<header class="panel-heading">
		Transaction Categories
		<span class="pull-right"> <a  href="#" data-toggle="modal" data-target="#newCatModal" class="label label-success" style="margin: 10px"> <i class="fa fa-plus"></i> Add New </a> <a href="<%= transactions_path %>" class="label label-warning"><i class="fa fa-chevron-left"></i> Go Back To Transactions</a> </span>
	</header>

</section>
<div class="col-lg-6">
	<div class="panel-group m-b" id="accordion2">
		<% @categories.each do |category| %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<a> <%= category.name %> </a>
				<span class="pull-right"> <a class ="label label-danger" style="margin-right:5px" href="<%= category_path(category)%>" data-method="delete" data-confirm="Are you sure you want to delete this Category?"> <i class ="glyphicon glyphicon-trash"></i> </a> <a class="accordion-toggle label label-info" data-toggle="collapse" data-parent="#accordion2" href="#<%= category.id %>"> <i class="glyphicon glyphicon-pencil"></i> </a> </span>
			</div>
			<div id="<%= category.id %>" class="panel-collapse collapse">
				<div class="panel-body text-sm">
					<%= form_for category, :html => {:class => "form-inline"} do |f| %>
					<div class="form-group">
						<%= f.text_field :name, :class => "form-control", :placeholder => "Name"%>
					</div>
					<button type="submit" class="btn btn-success">
						Save
					</button>
					<% end %>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>

<div class="modal fade" id="newCatModal" tabindex="-1" role="dialog" aria-labelledby="newCatModel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					&times;
				</button>
				<h4 class="modal-title" id="myModalLabel">New Category</h4>
			</div>
			<div class="modal-body">
				<%= form_for @category, :html => {:class => "form-inline"} do |f| %>
				<div class="form-group">
					<%= f.text_field :name, :class => "form-control", :placeholder => "Name"%>
				</div>
				<button type="submit" class="btn btn-success">
					Save
				</button>
				<% end %>
			</div>
		</div>
	</div>
</div>
